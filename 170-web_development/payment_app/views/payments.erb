<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Created</th>
      <th>Card Number</th>
      <th>Expiration Date</th>
    </tr>
  </thead>
  <tbody>
    <% session[:payments].each_with_index do |payment, index| %>
    <tr>
      <td><%= (index + 1) %></td>
      <td><%= payment[:full_name] %></td>
      <td><%= payment[:time] %></td>
      <td><%= (payment[:card_number][0,4] + "-****-****-****") %></td>
      <td><%= payment[:expiration_date] %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<p><a href="/payments/create">Create new payment</a></p>
